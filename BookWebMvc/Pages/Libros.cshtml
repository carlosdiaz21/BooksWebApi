@page
@using System.Collections.Generic
@using BookWebMvc.Models
@model IEnumerable<Book>
@{      
    ViewData["Title"] = "Libros";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="CrearLibros" asp-controller="Libros">Agregar Libro</a>
        </div>
    </div>
    <div class="row">
        @if(Model.Count() > 0)
            {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Description)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.PageCount)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Excerpt)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.PublishDate)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.PageCount</td>
                    <td>@item.Excerpt</td>
                    <td>@item.PublishDate</td>
                    <td>
                        <a asp-controller="Libros" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning" >Editar</a>
                        <a asp-controller="Libros" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
               
            }
                </tbody>
            </table>
            }
    </div>
</div>
